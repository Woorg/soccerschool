.maps
	position relative
	display block
	min-height 936px
	overflow hidden
	clr()
	+r($tM)
		min-height (936px/3)
	&__in
		position absolute
		z-index 1
		top 0
		left 50%
		@extends .in
		min-width 1200px
		padding-top 90px
		clr()
		transform translateX(-50%)
		+r($tM)
			position static
			padding-top (90px/2)
			min-width auto
			transform none
	&__title
		@extends .title
		margin-bottom 35px
		text-align center
		+r($tM)
			margin-bottom (35px/2)
	&__list
		position absolute
		top 212px
		right 19px
		padding-left 14px
		width 552px
		+r($tM)
			position static
			top (212px/2)
			margin auto
			padding-left 0
			max-width 552px
			width auto
			right 20px
	&__item
		position relative
		border 1px solid transparent
		margin-bottom 24px
		min-height 200px
		background-color rgba(255,255,255, .7)
		tr(all .3s ease)
		+r($tM)
			width auto
			min-height auto
	&__item_active
		border 1px solid #12ab0e
		background #fff
		tr(all .3s ease)
		&:after,
		&:before
			position absolute
			top 50%
			left -20px
			content ""
			+r($tM)
				display none
		&:after
			z-index 0
			left -20px
			top 50%
			width 0
			height 0
			border-style solid
			border-width 19px 20px 19px 0
			border-color transparent #13ab0e transparent transparent
			transform translate(0, -50%)
		&:before
			z-index 1
			top calc(50% - 0px)
			left -18px
			width 0
			height 0
			border-style solid
			border-width 18px 18px 18px 0
			border-color transparent rgba(255,255,255, 1) transparent transparent
			transform translate(0, -50%)
		.maps__number
			background-color #2b66eb
			&:before
				border 1px solid #26b609
				width 73px
				height 73px
				background rgba(255,255,255 .6)
				+r($tM)
					width (73px/2)
					height (73px/2)
			&:after
				width 49px
				height 49px
				background-image linear-gradient(to top, #00a113 0%, #31bc06 100%)
				box-shadow 0 3px 4px rgba(0, 0, 0, 0.29)
				+r($tM)
					width (49px/2)
					height (49px/2)

	&__link
		padding-top 17px
		padding-right 18px
		padding-bottom 18px
		padding-left 17px
		display block
		text-decoration none
		color #333
		+r($tM)
			padding-top (17px/2)
			padding-right (18px/2)
			padding-bottom (18px/2)
			padding-left (17px/2)
	&__item-title
		position relative
		margin-top 14px
		margin-left 14px
		margin-bottom 22px
		padding-left 70px
		font-size 32px
		+r($tM)
			margin-top 0
			margin-bottom (22px/2)
			padding-left (70px/1.8)
			font-size (32px/1.4)
	&__number
		position absolute
		z-index 2
		top 50%
		left 0
		width 49px
		height 49px
		text-align center
		color #FFF
		font-family $pR
		font-size 36px
		text-transform uppercase
		border-radius 50%
		transform translateY(-50%)
		+r($tM)
			width (49px/2)
			height (49px/2)
			font-size (36px/2)
		&:after,
		&:before
			position absolute
			z-index -1
			top 50%
			left 50%
			content ''
			border-radius 50%
			transform translate(-50%, -50%)
		&:before
			border 1px solid #ffbb0e
			width 73px
			height 73px
			background rgba(255,255,255 .6)
			+r($tM)
				width (73px/2)
				height (73px/2)
		&:after
			width 49px
			height 49px
			background-image linear-gradient(to top, #ffb300 0%, #ffd339 100%)
			+r($tM)
				width (49px/2)
				height (49px/2)
	&__address,
	&__open-hours
		position relative
		margin-left 11px
		margin-bottom 5px
		padding-left 26px
		font-size 22px
		+r($tM)
			font-size (22px/1.4)
	&__icon
		position absolute
		top 50%
		left 0
		transform translateY(-50%)
	&__address
		.maps__icon
			width 19px
			height 26px
			stroke #12ab0e
	&__open-hours
		.maps__icon
			width 19px
			height 19px
			fill #12ab0e
	&__object,
	&__right
		float left
		width 50%
		min-height 936px
	&__object
		height 936px
		+r($tM)
			width 100%
			height (936px/2)
			min-height (936px/2)
			// height 100%
	&__right
		min-height 936px
		background url('../images/general/map-bg.jpg') 0 0 no-repeat
		background-size cover
		+r($tM)
			display none
