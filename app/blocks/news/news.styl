.news
	display block
	background #fafafa
	&__in
		@extends .in
		padding-top 90px
		padding-bottom 100px
		+r($tM)
			padding-top (90px/2)
			padding-bottom (100px/2)
	&__title
		@extends .title
		margin-bottom 37px
		text-align center
	&__list
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items flex-start
	&__item
		width 370px
		width ratio-percentage(370, 1170)
		min-height 622px
		background-color #ffffff
		box-shadow 0 0 54px rgba(0, 0, 0, 0.1)
		&:last-child
			margin-bottom 0
		+r($tM)
			min-height auto
		+r($t)
			margin-bottom 20px
			width 48%
		+r($m)
			width auto


	&__link
		display block
		text-decoration none
		color #fff
	&__image
		margin-bottom 14px
		img
			display block
			max-width 100%
			height auto
	&__w
		padding-left 18px
		padding-right 18px
		padding-bottom 30px
	&__date
		position relative
		margin-bottom 13px
		padding-left 25px
		color #9b9b9b
		font-size 18px
		+r($tM)
			font-size (18px/1.2)

		&:after
			position absolute
			top 50%
			left 0
			content ''
			retinaSprite($date_icon_group)
			transform translateY(-50%)
	&__item-title
		margin-bottom 16px
		color #343539
		font-size 26px
		line-height 1.3
		+r($tM)
			font-size (26px/1.4)

	&__text
		color #343539
		font-size 17px
		line-height 1.529
		+r($tM)
			font-size (17px/1.2)

