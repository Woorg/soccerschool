.how
	display block
	background url('../images/general/cta-bg.jpg') 50% 0 no-repeat
	background-size cover
	&_second
		background url('../images/general/cta-2-bg.jpg') 50% 0 no-repeat
		background-size cover
	&__in
		@extends .in
		padding-top 60px
		padding-bottom 55px
		text-align center
		+r($tM)
			padding-top (60px/2)
			padding-bottom (55px/2)

	&__title
		@extends .title
		margin-bottom 20px
		padding-bottom 0
		font-size 50px
		font-family $pR
		text-align center
		color #fff
		+r($tM)
			font-size (50px/2)
		&:after
			display none
	&__button
		tr(all .3s ease)
		&:hover
			tr(all .3s ease)


