.social
	padding-top 9px
	padding-right 22px
	width 292px
	display block
	color #FFF
	+r($tM)
		padding-top 0
		padding-right 0
	&__title
		margin-bottom 11px
		font-size 19px
		font-family $sR
	&__list
		padding-left 5px
		padding-right 24px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items flex-start
	&__item
		.social__icon
			fill #fff
			tr(all .3s ease)
	&__item_fb
		.social__icon
			width 8px
			height 16px
	&__item_vk
		.social__icon
			width 21px
			height 12px
	&__item_youtube
		.social__icon
			width 19px
			height 20px
	&__item_inst
		.social__icon
			width 20px
			height 20px
	&__link
		position relative
		border 2px solid #02a212
		display block
		width 50px
		height 50px
		background-color transparent
		border-radius 50%
		&:hover
			.social__icon
				fill #ffcc1b
				tr(all .3s ease)
	&__icon
		position absolute
		top 50%
		left 50%
		display block
		transform translate(-50%, -50%)

.social_second
	padding-right 0
	padding-top 0
	width 230px
	.social__list
		padding-right 0
		padding-left 0
	.social__link
		width 50px
		height 50px
		border-radius 50%
		border 2px solid #ffffff
		background transparent


